<body class="news-no-user">
    <div class="wrapper">
        <aside class="content-wrapper">
            <header class="header">
                <div class="content" id="header-content">

                    @if (Pay365Wallet.Helpers.LanguageHelper.GetCurrentLanguage() == "vi")
                    {
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownLanguages" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="flag-icon flag-icon-vn"></span>
                                <span class="language-label">@Resources.Home.String3</span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu right" aria-labelledby="dropdownLanguages">
                                <li><a href="javascript:;"><span class="flag-icon flag-icon-vn"></span>@Resources.Home.String3</a></li>
                                <li><a href="@Html.Raw(Pay365.Utils.Config.Domain)Home/ChangeLanguage?lang=en"><span class="flag-icon flag-icon-us"></span>English</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownLanguages" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="flag-icon flag-icon-us"></span>
                                <span class="language-label">English</span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu right" aria-labelledby="dropdownLanguages">
                                <li><a href="javascript:;"><span class="flag-icon flag-icon-us"></span>English</a></li>
                                <li><a href="@Html.Raw(Pay365.Utils.Config.Domain)Home/ChangeLanguage?lang=vi"><span class="flag-icon flag-icon-vn"></span> @Resources.Home.String3</a></li>
                            </ul>
                        </div>
                    }

                    <div class="search" id="headerSearchColumn">
                        <button class="btn-search" id="headerBtnToggleSearch"><i class="material-icons">search</i></button>
                        <div class="search-form">
                            <input type="text" id="txt_keyword_search" placeholder="@Resources.Account_info.lbl_header_textSearch">
                            <button class="btn-search-submit waves-effect waves-primary" onclick="news.Btn_SearchNews();"><i class="material-icons">search</i></button>
                        </div>
                    </div>
                    <div class="buttons">
                        <a href="@Html.Raw(Pay365.Utils.Config.Domain)dang-nhap" class="btn btn-primary waves-effect waves-light">@Resources.Home.String1</a>
                        <a href="@Html.Raw(Pay365.Utils.Config.Domain)dang-ky" class="btn btn-primary waves-effect waves-light">@Resources.Home.String2</a>
                    </div>

                </div>
            </header>

            @RenderBody()
        </aside>
    </div>

    <div id="modal-alert" class="modal">
        <div class="modal-content">
            <h4 id="modal_title">@Resources.Home.lbl_aleart</h4>
            <p id="modal_content"></p>
        </div>
        <div class="modal-footer">
            <a href="javascript:;" id="btnAlert" class="modal-action modal-close waves-effect waves-light btn btn-danger">@Resources.Home.btn_close</a>
        </div>
    </div>

    <div id="modal-success" class="modal">
        <div class="modal-content">
            <h4 id="modal_title">@Resources.Home.lbl_aleart</h4>
            <p id="modal_content"></p>
        </div>
        <div class="modal-footer">
            <a href="javascript:;" id="btnSucess" class="modal-action modal-close waves-effect waves-light btn btn-success">@Resources.Home.btn_Success</a>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/pay365libjs")
    @Scripts.Render("~/bundles/js_main")
    @Scripts.Render("~/bundles/pay365commonjs")
    <script src="@Html.Raw(Pay365.Utils.Config.Domain)Scripts/views/news.js"></script>

    <script src="~/Scripts/libs/croppie/croppie.min.js"></script>
    <script type="text/javascript">
    var listResource = ['common.homepage', 'profile.password', 'common.register', 'common.errorcode','profile.account', 'common.news'];
    var currlang = utils.getCurrentLanguage();
    i18n.init({
            lng: currlang,
            resGetPath: "@Html.Raw(Pay365.Utils.Config.Domain)locales/__lng__/__ns__.json",
            ns: { namespaces: listResource, defaultNs: 'common.homepage' } //khai báo các file resource
        },
        function (t) {
            $(".translang").i18n();
            });

    $('.modal').modal();

    $('body').click(function(){
        $('#headerSearchColumn').removeClass('show');
        if($('body').hasClass('hideSidebar')){
            $('.sidebar .menu-item').removeClass('expand');
        }
        });

    $('#headerBtnToggleSearch').click(function(e){
        e.stopPropagation();
        $('#headerSearchColumn').addClass('show').find('input').focus();
    });
    $('#headerSearchColumn').click(function(e){
        e.stopPropagation();
    });


    $('#txtEmailSubcrible').keyup(function(event) {
        var keyCode = event.keyCode || event.which;
        if (keyCode === 13) {
            news.RegisterSubscripber();
        } else {
            $('#txterror_emailSubcrible').text('');
        }
    });



    $('#txt_keyword_search').keyup(function(event) {
        var keyCode = event.keyCode || event.which;
        if (keyCode === 13) {
            news.Btn_SearchNews();
        }
    });

    </script>
</body>
