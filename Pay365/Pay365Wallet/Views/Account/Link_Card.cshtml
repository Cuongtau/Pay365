        linkcard.GetListBank(0);

        $('#month_year').keypress(function (e) {
            $('#error_month_year').text("");
            var keyCode = (window.event) ? e.keyCode : e.which;
            if ((keyCode >= 48 && keyCode <= 57) || keyCode === 8) {
            } else {
                return;
            }
            var value = this.value;
            if (value.length == 2) {
                $('#month_year').val(value + "/");
            } else if (value.length > 3) {
                value = value.replace(/[/]/g, '');
                var s1 = value.substring(0, 2);
                if (s1 < 0 || s1 > 12) {
                    $('#error_month_year').text("Tháng không hợp lệ");
                }
                var s2 = value.substring(2, 4);
                var s = s1 + "/" + s2;
                $('#month_year').val(s);
            } else {
                return;
            }
        });
    });
</script>