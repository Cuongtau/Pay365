    <script src="~/Content/assets/js/material.js"></script>
    @Scripts.Render("~/bundles/pay365viewjs")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        var listResource = ['common.homepage', 'profile.password', 'common.register', 'common.errorcode'];
        var currlang = utils.getCurrentLanguage();
        i18n.init({
            lng: currlang,
            resGetPath: "@Html.Raw(Pay365.Utils.Config.Domain)locales/__lng__/__ns__.json",
            ns: { namespaces: listResource, defaultNs: 'common.homepage' }, //khai báo các file resource
        },
        function (t) {
            $(".translang").i18n();
        });

        $(function () {
            payMainLoad();
            //var callback = function () {
            //    window.location.href = utils.rootUrl() + 'thong-tin-tai-khoan';
            //};
            //common.CheckAuthenticated(callback);
        });


        $(window).scroll(function () {
            topBar();
        });
        $(window).resize(function () {
            topBar();
        });

        $(window).on("load", function () {
            $(".counter").appear(function () {
                counter();
            });
            topBar();
            countdown();
            $('.modal').modal();
        });
    </script>
</body>
