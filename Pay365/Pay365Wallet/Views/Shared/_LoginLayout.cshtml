<body class="accountPage">
    <div class="wrapper">
        <header class="header">
            <nav class="top-bar">
                <div class="container">
                    <a href="@Html.Raw(Pay365.Utils.Config.Domain)" class="logo pull-left"><img src="@Html.Raw(Pay365.Utils.Config.Domain)Content/assets/images/logo-purple.svg" alt=""></a>
                    <div class="pull-right">
                        @if (Pay365Wallet.Helpers.LanguageHelper.GetCurrentLanguage() == "vi")
                        {
                            <p class="current-language">
                                <span class="flag-icon flag-icon-vn"></span>
                                <span class="language-label">@Resources.Home.String3</span>
                                <a href="javascript:;" class="dropdown collapsed" data-toggle="collapse" data-target="#listLanguages" aria-expanded="false"><i class="fa fa-angle-down"></i></a>
                            </p>
                            <ul class="languages" id="listLanguages">
                                <li>
                                    <a href="javascript:;">
                                        <span class="flag-icon flag-icon-vn"></span>
                                        <span class="language">@Resources.Home.String3</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Html.Raw(Pay365.Utils.Config.Domain)Home/ChangeLanguage?lang=en">
                                        <span class="flag-icon flag-icon-us"></span>
                                        <span class="language">English</span>
                                    </a>
                                </li>
                            </ul>

                        }
                        else
                        {
                            <p class="current-language">
                                <span class="flag-icon flag-icon-us"></span>
                                <span class="language-label">English</span>
                                <a href="javascript:;" class="dropdown collapsed" data-toggle="collapse" data-target="#listLanguages" aria-expanded="false"><i class="fa fa-angle-down"></i></a>
                            </p>
                            <ul class="languages" id="listLanguages">
                                <li>
                                    <a href="javascript:;">
                                        <span class="flag-icon flag-icon-us"></span>
                                        <span class="language">English</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Html.Raw(Pay365.Utils.Config.Domain)Home/ChangeLanguage?lang=vi">
                                        <span class="flag-icon flag-icon-vn"></span>
                                        <span class="language">@Resources.Home.String3</span>
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </header>
        @RenderBody()
    </div>

    <div id="modal-alert" class="modal">
        <div class="modal-content">
            <h4 id="modal_title">@Resources.Home.String33</h4>
            <p id="modal_content"></p>
        </div>
        <div class="modal-footer">
            <a href="javascript:;" id="btnAlert" class="modal-action modal-close waves-effect waves-light btn btn-danger">@Resources.Home.String32</a>
        </div>
    </div>
    <div id="notification_modal" class="modal">
        <div class="modal-content">
            <h4>@Resources.Home.String33</h4>
            <p id="modal_content"></p>
        </div>
        <div class="modal-footer">
            <a href="javascript:;" class="modal-action modal-close waves-effect waves-green btn-flat">@Resources.Home.String32</a>
        </div>
    </div>

    <div id="modal_notification_result" class="modal">
        <div class="modal-content">
            <h4 style="font-size: 15px;"><i class="material-icons icon-success">check</i>Giao dịch thành công</h4>
            <div id="content">

            </div>
        </div>
        <div class="modal-footer">
            <a id="bt_close" href="javascript:;" class="modal-action waves-effect waves-light btn btn-default">Về trang chủ</a>
            <a id="bt_continue" href="javascript:;" class="modal-action waves-effect waves-light btn">Tiếp tục mua sắm</a>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/pay365libjs")
    @Scripts.Render("~/bundles/pay365commonjs")
